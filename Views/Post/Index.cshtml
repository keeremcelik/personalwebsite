@model IEnumerable<Post>
@{
    ViewData["Title"] = "Index";
    Layout = "_PanelLayout";
}
    <div class="col ml-3">
        <div class="text-right mb-3">
            <a asp-controller="Post" asp-action="Create" class="btn btn-sm btn-primary">Create</a>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
            <th>Status</th>
            <th>Title</th>
            <th>Date</th>
            <th></th>

            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @if (item.Status == false)
                            {
                                <span class="badge badge-danger">Passive</span>
                            }
                            else
                            {
                                <span class="badge badge-success">Active</span>
                            }
                        </td>
                        <td>
                            @item.Title
                        </td>
                        <td>@item.Date</td>

                        <td>
                            <a class="btn btn-primary btn-sm" asp-route-id="@item.PostId" asp-action="Edit" asp-controller="Post">
                                Edit
                            </a>
                            <a class="btn btn-danger btn-sm" asp-route-id="@item.PostId" asp-action="Delete" asp-controller="Post">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
