@model IEnumerable<SocialSetting>
@{
    ViewData["Title"] = "Index";
    Layout = "_PanelLayout";
}

<div class="col ml-3">
    <div class="text-right mb-3">
        <a asp-controller="SocialSetting" asp-action="Create" class="btn btn-sm btn-primary">Create</a>
        <a href="/socialsetting/create" class="btn btn-sm btn-primary">Create</a>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Status</th>
                <th>Name</th>
                <th>Icon</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (item.Status == false)
                        {
                            <span class="badge badge-danger">Passive</span>
                        }
                        else
                        {
                            <span class="badge badge-success">Active</span>
                        }
                    </td>
                    <td>@item.Name</td>
                    <td>@Html.Raw(item.Icon)</td>
                    <td>
                        <a class="btn btn-primary btn-sm" asp-route-id="@item.SocialId" asp-action="Edit" asp-controller="SocialSetting">
                            Edit
                        </a>
                        <a class="btn btn-danger btn-sm" asp-route-id="@item.SocialId" asp-action="Delete" asp-controller="SocialSetting">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


