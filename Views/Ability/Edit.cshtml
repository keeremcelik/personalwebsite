@model Ability
@{
    ViewData["Title"] = "Edit";
    Layout = "_PanelLayout";
}



<div class="row">
    <div class="col-md-12 ml-3">
        <form asp-action="Edit" asp-controller="Ability" method="POST">
            <input type="hidden" asp-for="AbilityId">
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control" placeholder="Please enter ability name" />
            </div>
            <div class="form-group">
                <label asp-for="Rate">Rate</label>
                <input asp-for="Rate" class="form-control" placeholder="Please enter ability rate" />
            </div>
            <div class="form-group">
                <div class="custom-control custom-switch">
                    <input type="checkbox" asp-for="Status" class="custom-control-input">
                    <label class="custom-control-label" asp-for="Status">Status</label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>
