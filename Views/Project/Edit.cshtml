@model Project
@{
    ViewData["Title"] = "Edit";
    Layout = "_PanelLayout";
}



<div class="row">
    <div class="col-md-12 ml-3">
        <form asp-action="Edit" asp-controller="Project" method="POST"  enctype="multipart/form-data">
            <input type="hidden" asp-for="ProjectId">
            <input type="hidden" asp-for="Image">
            <input type="hidden" asp-for="CoverImage">
            <div class="form-group">
                <label asp-for="Type">Category</label>
                <select asp-for="Type" class="form-control">
                    <option disabled selected value="0">Select Category....</option>
                    <option value="1">Web</option>
                    <option value="2">Desktop</option>
                    <option value="3">Mobile</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control" placeholder="Please enter project name" />
            </div>
            <div class="form-group">
                textarea
                <label asp-for="Content">Content</label>
                <textarea asp-for="Content" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="infrastructure">infrastructure</label>
                <input asp-for="infrastructure" class="form-control" placeholder="Please enter projects infrastructure" />
            </div>
            <div class="form-group">
                <label asp-for="Keywords">Keywords</label>
                <input asp-for="Keywords" class="form-control" placeholder="Please enter project keywords" />
            </div>
            <div class="form-group">
                <div class="row">
                    @foreach (var item in ViewBag.images)
                    {
                        <div class="col-md-3 ">
                            <div class="card">
                                <img src="~/img/projects/@item.PostId/@item.Name" class="img-thumbnail" style="max-height:200px; min-height:200px" width="200px" alt="@item.Name" />

                                <div class="card-body">
                                    <div class="row">
                                        @if (item.IsCoverImage == true)
                                        {
                                            <span class="btn btn-sm btn-warning w-100">Cover Image</span>
                                        }
                                        else
                                        {
                                            <a asp-controller="Image" asp-action="CoverImage" asp-route-id="@item.ImageId" class="btn btn-sm btn-success w-100">Do Cover Image</a>
                                            <a asp-controller="Image" asp-action="DeleteImg" asp-route-id="@item.ImageId" class="btn btn-sm btn-danger w-100">Delete</a>
                                        }
                                    </div>


                                </div>
                            </div>

                        </div>
                    }
                </div>
                <div class="row">
                    <div class="col-md-12 m-auto">
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" name="file" multiple id="file">
                            <label class="custom-file-label" for="file">Choose file...</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="custom-control custom-switch">
                    <input type="checkbox" asp-for="Status" class="custom-control-input">
                    <label class="custom-control-label" asp-for="Status">Status</label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>