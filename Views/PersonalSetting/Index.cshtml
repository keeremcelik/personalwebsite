@model PersonalSetting
@{
    ViewData["Title"] = "Index";
    Layout = "_PanelLayout";
}


<div class="row">
    <div class="col-md-12 ml-3">
        <form asp-action="Index" asp-controller="PersonalSetting" method="POST">
            <input type="hidden" asp-for="PSId">
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control" placeholder="Please enter the name" />
            </div>
            <div class="form-group">
                <label asp-for="Degree">Degree</label>
                <input asp-for="Degree" class="form-control" placeholder="Please enter the degree" />
            </div>

            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Please enter the email" />
            </div>
            <div class="form-group">
                <label asp-for="Phone">Phone</label>
                <input asp-for="Phone" class="form-control" placeholder="Please enter the phone" />
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-2 text-center">
                        <img src="~/img/@Model.Image" width="120" alt="@Model.Name">
                    </div>
                    <div class="col-md-10 m-auto">
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" name="file" id="file">
                            <label class="custom-file-label" for="file">Choose file...</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="custom-control custom-switch">
                    <input disabled type="checkbox" asp-for="Status" class="custom-control-input">
                    <label class="custom-control-label" asp-for="Status">Status</label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>
