@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "_PanelLayout";
}

<div class="col ml-3">
    <div class="text-right mb-3">
        <a asp-action="Create" asp-controller="Category" class="btn btn-sm btn-primary">Create</a>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <th>Status</th>
            <th>Name</th>
            <th>Entry</th>
            <th></th>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (item.Status == false)
                        {
                            <span class="badge badge-danger">Passive</span>
                        }
                        else
                        {
                            <span class="badge badge-success">Active</span>
                        }
                    </td>
                    <td>@item.Name</td>
                    <td>
                       POST SAYISI
                    </td>
                    <td>
                        <a class="btn btn-primary btn-sm" asp-route-id="@item.CategoryId" asp-action="Edit" asp-controller="Category">
                            Edit
                        </a>
                        <a class="btn btn-danger btn-sm" asp-route-id="@item.CategoryId" asp-action="Delete" asp-controller="Category">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

